    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Existing stylesheet link for your app -->
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    
